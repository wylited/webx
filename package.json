{
  "name": "webx",
  "version": "1.0.0",
  "description": "My personal web presence",
  "private": true,
  "scripts": {
    "build": "npm run clean && npm run build:css && npm run build:js && npm run build:assets",
    "clean": "rimraf public/dist",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/dist/style.css --minify",
    "build:js": "esbuild src/htmx.js --bundle --outfile=public/dist/htmx.min.js --minify && cp src/scripts.js public/",
    "build:assets": "cp src/wheni226.mp3 public/dist/ && cp src/jetbrains.woff2 public/dist/ && cp src/prose.json public/dist/ && cp src/favicon.ico public/"
  },
  "dependencies": {
    "htmx.org": "^1.9.12"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.0",
    "esbuild": "^0.24.0",
    "postcss": "^8.4.49",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.4.15"
  }
}
